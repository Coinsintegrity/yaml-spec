#!/usr/bin/env bash

version=$(
  cd $(dirname $0)
  tar -cf - html-to-html html-to-html.py lib/* | md5sum | cut -d " " -f 1
) >&2

source "${ROOT:-$PWD}/.bpan/run-or-docker.bash"

check() (
  need python3 3.8
  need python bs4 roman yaml
)

dockerfile() (
  from alpine
  pip beautifulsoup4 roman pyyaml
)

run "$@"
