#!/usr/bin/env bash

# XXX Using this hack until we can figure out how to get the same results
# directly from kramdown.

docker run -i --rm jekyll/jekyll \
  bash -c '(
    (
      echo "kramdown:"
      echo "  parse_block_html: true"
    ) > _config.yml
    echo ---
    echo ---
    cat
  ) > foo.md &&
  jekyll build >/dev/null &&
  cat ./_site/foo.html'
